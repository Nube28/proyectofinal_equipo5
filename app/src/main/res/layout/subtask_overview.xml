<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/postit_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_low"
    android:layout_marginRight="@dimen/margin_normal"
    android:layout_marginLeft="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_normal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/btn_subtask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subtask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eg_subtask"
                android:textStyle="bold"
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="@dimen/title_size"
                android:fontFamily="@string/typo_normal_text"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sym_money"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:fontFamily="@string/typo_normal_text"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:layout_marginStart="25dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_subtask_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eg_event_budget"
                    android:textSize="@dimen/text_size"
                    android:textStyle="normal"
                    android:fontFamily="@string/typo_normal_text"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow_subtask"
            android:layout_width="@dimen/img_arrow_right"
            android:layout_height="@dimen/img_arrow_right"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center"
            />
    </LinearLayout>

</LinearLayout>