    <!-- AYUDA -->
    <!-- el problema es que le backgroudn es el que quiere y
     no me esta agarrando que sea de color purpleMain
     ademas que tampoco hace que el + sea color beigeLight -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:backgroundTint="@color/purpleMain"
        app:srcCompat="@android:drawable/ic_input_add"
        android:tint="@color/beigeLight" />

</FrameLayout>
