<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beigeLight"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/event_img_overview"
        android:layout_width="@dimen/img_event_overview"
        android:layout_height="@dimen/img_event_overview"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_low"
        android:layout_marginBottom="@dimen/margin_low"
        android:layout_marginLeft="@dimen/margin_low"
        android:padding="20dp"
        android:background="@drawable/ic_event_img_background"
        android:src="@drawable/lain"
        />

    <LinearLayout
        android:layout_width="@dimen/linear_layout_event_overview"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/event_name_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eg_event_name"
            android:fontFamily="@string/typo_normal_text"
            android:textSize="@dimen/title_size"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sym_money"
                android:fontFamily="@string/typo_normal_text"
                android:textSize="@dimen/text_size"
                />
            <TextView
                android:id="@+id/event_budget_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eg_event_budget"
                android:fontFamily="@string/typo_normal_text"
                android:textSize="@dimen/text_size"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/low_size"
            android:text="@string/eg_event_category"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/img_arrow_right"
        android:layout_height="@dimen/img_arrow_right"
        android:src="@drawable/lain"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_low"
        />

</LinearLayout>