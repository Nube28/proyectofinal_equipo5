<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/postit_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_low"
    android:layout_marginRight="@dimen/margin_normal"
    android:layout_marginLeft="@dimen/margin_normal"
    android:layout_marginBottom="@dimen/margin_normal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_subtask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@drawable/checkbox_selector"/>

        <LinearLayout
            android:id="@+id/btn_subtask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subtask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eg_subtask"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sym_money"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tv_subtask_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eg_event_budget"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_arrow_subtask"
            android:layout_width="@dimen/img_arrow_right"
            android:layout_height="@dimen/img_arrow_right"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center"

            />
    </LinearLayout>

</LinearLayout>